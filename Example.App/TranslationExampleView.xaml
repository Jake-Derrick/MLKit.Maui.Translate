<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Example.App.TranslationExampleView">

    <VerticalStackLayout>
        <!-- Top section: Input -->
        <ScrollView Margin="20">
            <VerticalStackLayout>
                <Picker Title="Select a Language" ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedSourceLanguage}"/>
                <Label Text="Enter text:" />
                <Editor Placeholder="Type here" Text="{Binding InputText}"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Middle section: Translate button -->
        <Button Text="Translate" Command="{Binding TranslateCommand}" IsEnabled="{Binding ButtonEnabled}" HorizontalOptions="Center" Margin="10" />

        <!-- Bottom section: Output -->
        <StackLayout Margin="20">
            <Picker Title="Select a Language" ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding SelectedTargetLanguage}"/>
            <Label Text="Translated text:" />
            <Label Text="{Binding TranslatedText}" />
        </StackLayout>
    </VerticalStackLayout>

</ContentPage>
